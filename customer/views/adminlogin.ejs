<div>
    <%- include ("./partials/messages") %>
</div>
<div style="margin-top: 10%; background-color: white;" class="row">
    <div class="col-md-4 m-auto">
        <div class="card">
            <div class="card-body">
                <form action="/admin/login" method="POST">
                    <div class="mb-3">
                    <label for="email">Email</label>
                    <input type="email" name="email" class="form-control" placeholder="Email">
                    </div>
                    <div class="mb-3">
                        <label for="password">Login Token</label>
                        <input type="text" name="password" class="form-control"  placeholder="Token">
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn  btn-success">Sign In</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>