<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-8">
                <h4>All Customers</h4>
            </div>
            <div class="col-4">
                <i class="bi bi-people-fill text-info h3"></i>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if(customers.length > 0) { %>
                    <% for(let customer of customers) { %>
                        <tr>
                            <td><%= customer.name %></td>
                            <td><%= customer.mobile %></td>
                            <td><%= customer.email %></td>
                            <td>
                                <a href="/updateCustomer/<%= customer._id %>" class="btn btn-warning">Update</a>
                                <a href="/deleteCustomer/<%= customer._id %>" class="btn btn-danger">Danger</a>
                            </td>
                        </tr>
                    <% } %>
                <% } else{%>
                    <tr>
                        <td colspan="4" class="text-center"><h4>No data Found</h4></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    </div>
    <a href="/admin/dashboard" class="btn btn-info mt-3"><i class="bi bi-arrow-left"></i>Back</a>
</div>
