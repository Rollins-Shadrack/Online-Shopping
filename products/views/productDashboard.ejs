  <h3 class="text-center">Products</h3>
  <div class="row ">
      <% if(products.length > 0) { %>
        <% for(let product of products) { %>
            <div class="col-md-3 g-4">
                <img src="../uploads/<%= product.productimage %>" class="image-fluid"  alt="" style="width: 300px; height: 200px; border-radius: 15px;">
                <p class="text-center">Details</p> <br>
                <p><%= product.productname %></p>
                <p><b>Description</b> <span style="font-size:10px;"><%= product.description %></span> </p>
                <p><b>Price:</b> <%= product.price %></p>
                <p>
                    <form action="/add-to-cart" method="POST">
                        <input type="hidden" name="id" value="<%= product._id %>">
                        <button type="submit" style="border-radius: 20px;" class="btn btn-success">Add To Cart</button>
                    </form>
                </p>
            </div>
        <% } %>
    <% }else{ %>
        <h2 class="text-center pt-5 lead">No Products!!!</h3>
    <% } %>
  </div>
