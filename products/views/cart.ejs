<div style="background-color: white;margin-top: 80px; color: black;" class="row">
    <h2 class="text-center">Shopping Cart</h2>
    <p></p>
    <div class="col-md-7 g-3 m-auto">
        <section  class=" p-5">
  
            <% if (cart.products.length == 0){ %>
                    <h2 class="text-center">No Item In shopping Cart</h2>
        <% } else {%>

            <table class="table table-striped table-hover">
                <thead >
                    <tr >
                        <th class="p-2  "> <h3>#</h3></th>
                        <th class="p-2 "> Image <i class="bi bi-file-earmark-image"></i></th>
                        <th class="p-2  "> Name</th>
                        <th class="p-2 ">Price</th>
                        
                        <th class="p-2 ">Action <i class="bi bi-activity"></i></th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0;i < cart.products.length; i++){
                    let product = cart.products[i];
                        %>
                    <tr>
                    <th scope="row">
                        <%= i+1 %>
                    </th>
                    <td ><img style="width: 50px; height: 50px;" src="../uploads/<%= product.productimage %>" alt=""> </td>
                    <td><%= product.productname %></td>
                    <td><%= product.price %> Ksh</td>
                    <td >
                        <form action="/delete-cart" method="post">
                            <input type="hidden" name="prodId" value="<%= product._id %>">
                            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i></button>
                        </form>  
                    </td>
                </tr>
                
                <% } %>
                <tr>
                    <td colspan="2">
                        Total Price
                    </td>
                    <td class="text-dark m-auto" colspan="4"><%= cart.totalPrice %> Ksh</td>
                </tr>
                </tbody>
                </table>
        
        
                <div>
                    <a href="/order" style="border-radius: 20px;" class="btn btn-primary"> Order <%= cartLength %> Items</a>
                    </div>
                    </div>
        
        <%}%>
        
        </section>
    </div>

</div>
<footer class="text-center mt-5 py-3">
    <h4>Copyright &copy; 2022</h4>
    <p>Online Shopping </p> 
    <h6><i class="bi bi-building text-primary h3"></i>Nairobi,Kenya</h6>
</footer>